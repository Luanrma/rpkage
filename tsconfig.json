{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2017",
    "types": ["jest", "node"],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@private/*": ["src/app/(private)/*"],
      "@/*": ["./src/*"],
      "@/components/*": ["src/app/components/*"],
      "@/contexts/*": ["src/appcontexts/*"],
      "@/hooks/*": ["src/app/hooks/*"]      
    }
  },
  "include": [
    "src",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next.config.ts"  ],
  "exclude": [
    "node_modules"
  ]
  
}
